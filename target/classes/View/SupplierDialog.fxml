<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SupplierDialogController" stylesheets="@/Design.css" minHeight="600" minWidth="800" spacing="20">
    <TableView fx:id="supplierTable" styleClass="table-view">
        <columns>
            <TableColumn fx:id="IDColumn" text="ID" prefWidth="120"/>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="180" />
            <TableColumn fx:id="phoneColumn" text="Phone Number" prefWidth="220"/>
            <TableColumn fx:id="emailColumn" text="Email" prefWidth="280"/>
        </columns>
    </TableView>
    <HBox spacing="10" alignment="CENTER">
        <Button fx:id="selectButton" text="Select" onAction="#handleSelect" styleClass="large-menu-button"/>
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" styleClass="large-menu-button"/>
    </HBox>
</VBox>
