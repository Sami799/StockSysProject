<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/Design.css" styleClass="root1" style="-fx-background-color: #f0f4f7; -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.WorkersController" >
    <top>
        <ToolBar>
            <Button text="Back" onAction="#backClicked" styleClass="large-menu-button1"/>
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Search: " styleClass="search-label"/>
                <TextField fx:id="searchBar" styleClass="search-bar"/>
            </HBox>
        </ToolBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" maxWidth="800" maxHeight="400" minWidth="800" minHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="userfullnameColumn" prefWidth="250.0" text="User FullName"/>
                    <TableColumn fx:id="usernameColumn" prefWidth="250.0" text="Username"/>
                    <TableColumn fx:id="passwordColumn" prefWidth="250.0" text="Password"/>
                    <TableColumn fx:id="emailColumn" prefWidth="300.0" text="Email"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox spacing="20" alignment="CENTER">
                <Button text="Add Worker" onAction="#addWorkerClicked" styleClass="large-menu-button"/>
                <Button fx:id="RemoveWorker" text="Remove Worker" onAction="#removeWorkerClicked" styleClass="large-menu-button"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <!-- Time display -->
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: transparent;">
            <Label fx:id="clockLabel" style="-fx-font-size: 24px; -fx-text-fill: black; -fx-background-color: #D3D3D3; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1;"/>
        </HBox>
    </bottom>
</BorderPane>
