<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.GoodsHistoryController" stylesheets="@/Design.css" styleClass="root1" style="-fx-background-color: #f0f4f7; -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-size: cover;" prefHeight="600.0" prefWidth="800.0">
    <top>
        <ToolBar>
            <Button text="Back" onAction="#backClicked" styleClass="large-menu-button1"/>
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Search by Supplier Name: " styleClass="search-label"/>
                <TextField fx:id="searchBar" styleClass="search-bar"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Choose Date: " styleClass="search-label"/>
                <DatePicker fx:id="datePicker" />
            </HBox>
        </ToolBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TableView fx:id="goodsTable" VBox.vgrow="ALWAYS" maxWidth="1600" maxHeight="800" minWidth="1000" minHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="goodsIdColumn" prefWidth="100.0" text="Goods ID"/>
                    <TableColumn fx:id="supplierIdColumn" prefWidth="100.0" text="Supplier ID"/>
                    <TableColumn fx:id="supplierNameColumn" prefWidth="150.0" text="Supplier Name"/>
                    <TableColumn fx:id="phoneNumberColumn" prefWidth="150.0" text="Phone Number"/>
                    <TableColumn fx:id="goodsDateColumn" prefWidth="150.0" text="Goods Date"/>
                    <TableColumn fx:id="viewColumn" prefWidth="100.0" text="View"/>
                    <TableColumn fx:id="viewItemsColumn" prefWidth="150.0" text="View Items (Quantity)"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
