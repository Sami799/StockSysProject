<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: #f0f4f7; -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-size: cover;" styleClass="root1" stylesheets="@/Design.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.HomeScreenController">
    <top>
        <BorderPane>
            <left>
                <Label fx:id="userLabel" style="-fx-font-size: 24px; -fx-text-fill: black; -fx-background-color: #D3D3D3; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1;" />
            </left>
            <center>
                <HBox alignment="CENTER" spacing="20" style="-fx-background-color: transparent;">
                    <Text fx:id="Title" style="-fx-font-size: 80px; -fx-fill: white; -fx-effect: dropshadow(gaussian, black, 5, 0, 0, 3);" text="Home" translateX="-120.0">
                        <font>
                            <Font name="Segoe UI Semibold" size="70.0" />
                        </font>
                    </Text>
                </HBox>
            </center>
        </BorderPane>
    </top>
    <center>
        <VBox fx:id="buttonContainer" alignment="CENTER" spacing="20" style="-fx-padding: 20; -fx-alignment: center;">
            <HBox alignment="CENTER" spacing="10">
                <TextField fx:id="searchField" promptText="Search by Barcode" styleClass="search-bar"/>
                <Button onAction="#searchItem" text="Search" styleClass="search-button"/>
            </HBox>
        </VBox>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT" spacing="20" style="-fx-background-color: transparent;">
            <Label fx:id="clockLabel" style="-fx-font-size: 24px; -fx-text-fill: black; -fx-background-color: #D3D3D3; -fx-padding: 5; -fx-border-color: black; -fx-border-width: 1;" />
        </HBox>
    </bottom>
</BorderPane>
