<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/Design.css" styleClass="root1" style="-fx-background-color: #f0f4f7; -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.OrdersHistoryController">
    <top>
        <ToolBar>
            <Button text="Back" onAction="#backClicked" styleClass="large-menu-button1"/>
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Search by Customer Name: " styleClass="search-label"/>
                <TextField fx:id="searchBar" styleClass="search-bar"/>
                <Button text="Reset" onAction="#resetButtonClicked" styleClass="search-button"/>
            </HBox>
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Choose Date: " styleClass="search-label"/>
                <DatePicker fx:id="datePicker" />
            </HBox>
        </ToolBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TableView fx:id="ordersTable" VBox.vgrow="ALWAYS" maxWidth="1400" maxHeight="700" minWidth="800" minHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="orderIdColumn" prefWidth="100.0" text="Order ID"/>
                    <TableColumn fx:id="customerNameColumn" prefWidth="150.0" text="Customer Name"/>
                    <TableColumn fx:id="phoneNumberColumn" prefWidth="150.0" text="Phone Number"/>
                    <TableColumn fx:id="totalPriceColumn" prefWidth="100.0" text="Total Price"/>
                    <TableColumn fx:id="orderDateColumn" prefWidth="150.0" text="Order Date"/>
                    <TableColumn fx:id="FoldersColumn" prefWidth="100.0" text="Order folder"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </VBox>
    </center>
</BorderPane>
