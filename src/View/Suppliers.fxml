<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<BorderPane prefHeight="600.0" prefWidth="800.0" stylesheets="@/Design.css" styleClass="root1" style="-fx-background-color: #f0f4f7; -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-size: cover;" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.SuppliersController">
    <top>
        <ToolBar>
            <Button text="Back" onAction="#backClicked" styleClass="large-menu-button1"/>
            <HBox alignment="CENTER" spacing="10" HBox.hgrow="ALWAYS">
                <Label text="Search: " styleClass="search-label"/>
                <TextField fx:id="searchBar" styleClass="search-bar"/>
                <Button text="Reset" onAction="#resetButtonClicked" styleClass="search-button"/>
            </HBox>
        </ToolBar>
    </top>
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TableView fx:id="tableView" VBox.vgrow="ALWAYS" maxWidth="1200" maxHeight="600" minWidth="800" minHeight="400" styleClass="table-view">
                <columns>
                    <TableColumn fx:id="IDColumn" prefWidth="200.0" text="ID"/>
                    <TableColumn fx:id="FullNameColumn" prefWidth="200.0" text="Full Name"/>
                    <TableColumn fx:id="PhoneNumberColumn" prefWidth="200.0" text="Phone Number"/>
                    <TableColumn fx:id="EmailColumn" prefWidth="200.0" text="Email"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
            <HBox spacing="20" alignment="CENTER">
                <Button text="Add Supplier" onAction="#addSupplierClicked" styleClass="large-menu-button"/>
                <Button text="Remove Supplier" onAction="#removeSupplierClicked" styleClass="large-menu-button"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
