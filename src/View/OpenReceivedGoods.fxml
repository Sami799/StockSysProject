<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controller.OpenReceivedGoodsController" stylesheets="@/Design.css" styleClass="root1" style="-fx-background-color: #f0f4f7; -fx-background-position: center center; -fx-background-repeat: no-repeat; -fx-background-size: cover;" prefHeight="600.0" prefWidth="800.0">
    <top>
        <ToolBar>
            <Button fx:id="BackBtn" text="Back" onAction="#backClicked" styleClass="large-menu-button"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label text="Open Received Goods" styleClass="title-label" style="-fx-text-fill: #2C3E50"/>
            <Pane HBox.hgrow="ALWAYS"/>
        </ToolBar>
    </top>
    <center>
        <TableView fx:id="goodsTable" styleClass="table-view">
            <columns>
                <TableColumn fx:id="goodsIdColumn" text="Goods ID"/>
                <TableColumn fx:id="supplierIdColumn" text="Supplier ID"/>
                <TableColumn fx:id="supplierNameColumn" text="Supplier Name"/>
                <TableColumn fx:id="phoneNumberColumn" text="Phone Number"/>
                <TableColumn fx:id="goodsDateColumn" text="Goods Date"/>
                <TableColumn fx:id="itemsColumn" text="Items"/>
                <TableColumn fx:id="currentQuantityColumn" text="Current Quantity"/>
                <TableColumn fx:id="demandedQuantityColumn" text="Demanded Quantity"/>
                <TableColumn fx:id="uploadColumn" text="Upload"/>
                <TableColumn fx:id="completeColumn" text="Complete"/>
            </columns>
        </TableView>
    </center>
    <bottom>
        <HBox spacing="10" alignment="CENTER">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Button text="Remove Goods" onAction="#removeGoodsClicked" styleClass="large-menu-button"/>
        </HBox>
    </bottom>
</BorderPane>
